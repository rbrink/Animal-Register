<div ng-controller="app.views.trash.index as index">
    <div class="row">
        <div class="col-sm-12">
            <div class="btn-group pull-right m-t-15">
                <button type="button" ng-disabled="!index.entries.length" ng-click="index.emptyTrash()" class="btn btn-danger waves-effect waves-light">
                    Prullenbak legen
                    <span class="m-l-5">
                        <i class="fa fa-recycle"></i>
                    </span>
                </button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <table id="dataTable" class="table table-striped table-bordered"></table>
            </div>
        </div>
    </div>
</div>